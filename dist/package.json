    "watch": "npx tsc -w"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^4.0.0",
    "axios": "^0.19.0",
    "big.js": "^5.2.2",
    "lodash": "^4.17.20",
    "moment": "^2.22.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/chai": "^4.2.11",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^8.0.3",
    "@types/request": "^2.48.1",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "mocha": "^8.1.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.1"
  }
