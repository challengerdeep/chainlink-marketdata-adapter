{
  "name": "kaiko-adapter",
  "version": "1.0.0",
  "description": "Chainlink external adapter for Kaiko - https://www.kaiko.com/",
  "license": "MIT",
  "main": "./index.js",
  "scripts": {
    "build": "npx tsc",
    "postbuild": "cp package-lock.json ./dist; sed 's#./index.js#./index.js#' package.json > ./dist/package.json",
    "lint": "npx tslint --config tslint.json '*.ts' 'src/**/*.ts' 'test/**.*.ts' -t verbose",
    "test": "npx tsc && npx mocha -r ts-node/register test/**/*.test.ts",
    "watch": "npx tsc -w"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^0.11.1",
    "moment": "^2.22.2",
    "request": "^2.88.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/request": "^2.48.1",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.1"
  }
}
